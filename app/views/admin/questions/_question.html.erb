<tr>
  <td><%= question.title %></td>
  <td><%= link_to t('show'), admin_question_path(question), class: 'btn btn-success' %></td>
  <td><%= link_to t('edit'), edit_admin_question_path(question), class: 'btn btn-success' %></td>
  <td>
    <%= link_to t('delete'),
               admin_question_path(question),
               method: :delete,
               data: { confirm: t('sure') }, class: 'btn btn-danger' %>
  </td>
</tr>
