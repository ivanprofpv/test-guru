<h1><%= badge_header(@badge) %></h1>
<hr />
<%= form_with model: [:admin, @badge] do |f| %>
  <%= render 'shared/errors', resource: @badge %>

  <p><%= f.label :title %><br>
  <%= f.text_field :title %></p>

  <p><%= f.label :image %><br>
  <%= f.select :image, @images %></p>

  <p><%= f.label :rule %><br>
  <%= f.select :rule, @rules %></p>

  <p><%= f.label :rule_value %><br>
  <%= f.text_field :rule_value %></p>

  <%= f.submit class: "btn btn-primary" %>
  <%= link_to t('back'), badges_path, class: "btn btn-primary" %>
<% end %>