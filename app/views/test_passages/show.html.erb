<h2><%= t('.header', title: @test_passage.test.title) %></h2>

<%= current_question = @test_passage.current_question %>
<%= question_count = @test_passage.test.questions.count %>

<div class="progress-bar-main">
  <div class="progress-bar" data-current-test = "<%= current_question %>" data-all-tests = "<%= question_count %>"
    <p class="progress-bar_percentage"></p>
  </div>
</div>

<div class="mt-3">
  <b><%= t('.question') %><%= @test_passage.question_number %> /
  <b><%= question_count %></b>
<br>
  <%= current_question.body %>
</div>

<p>
  <b><%= current_question.body %></b>
</p>

<br>

<%= form_with url: test_passage_path(@test_passage), local: true,
                                                     method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,
       current_question.answers, :id, :body,
                                               include_hidden: false do |b| %>
    <div class="form-group">
        <%= b.check_box id: "answer_ids_#{b.object.id}" %>
        <%= b.label %>
    </div>
  <% end %>

  <p><%= link_to t('gist_question'), gist_passage_path(@test_passage), method: :post %></p>
  <p><%= form.submit t('next'), class: 'btn btn-primary' %></p>

<% end %>
