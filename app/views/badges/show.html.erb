<h1 class="mt-3"><%= @badge.title %></h1>
<hr />
  <%= link_to t('.tests'), tests_path, class: "btn btn-primary" %>
  <%= link_to t('.badges'), badges_path, class: "btn btn-primary" %>
  <% if current_user.admin? %>
  | <%= link_to t('edit'), edit_admin_badge_path(@badge), class: "btn btn-success" %>
  <%= link_to t('delete'), admin_badge_path(@badge),
                           class: "btn btn-danger",
                           method: :delete,
                           data: { confirm: t('sure')} %>
  <% end %>

<div class="row mt-4">
  <div class="col-6">
    <p><%= image_tag("#{@badge.image}", size: "100") %></p>
  </div>
</div>